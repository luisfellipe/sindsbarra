          <TableColumn fx:id="nomeColuna" prefWidth="468.0" text="Nome" />
            <TableColumn fx:id="valorColuna" prefWidth="113.0" text="Valor" />
          <TableColumn fx:id="dataAdesaoColuna" prefWidth="157.0" style="-fx-alignment: center;" text="Data Adesao" />
        </columns>
         <contextMenu>
            <ContextMenu>
              <items>
                <MenuItem fx:id="miNovoConvenio" mnemonicParsing="false" text="novo" onAction="#novoConvenio"/>
