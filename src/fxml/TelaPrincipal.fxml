<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ContextMenu?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane fx:id="rootLayout" prefHeight="694.0"
	prefWidth="1300.0" styleClass="rootLayout"
	stylesheets="@../assets/css/application.css"
	xmlns="http://javafx.com/javafx/11.0.1"
	xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="controller.TelaPrincipalController">
	<children>
		<TableView id="tabela" fx:id="tabela" editable="true"
			layoutY="215.0" prefHeight="478.0" prefWidth="1300.0">
			<columns>
				<TableColumn id="matriculaColuna"
					fx:id="matriculaColuna" maxWidth="128.0" minWidth="-1.0"
					prefWidth="122.0" text="Matricula" />
				<TableColumn id="nomeColuna" fx:id="nomeColuna"
					maxWidth="459.0" minWidth="-1.0" prefWidth="459.0" text="Nome" />
				<TableColumn id="funcaoColuna" fx:id="funcaoColuna"
					maxWidth="348.0" minWidth="-1.0" prefWidth="303.0"
					text="Cargo/Funcao" />
				<TableColumn id="cpfColuna" fx:id="cpfColuna"
					maxWidth="270.0" minWidth="-1.0" prefWidth="159.0" text="CPF" />
				<TableColumn id="admColuna" fx:id="admissaoColuna"
					maxWidth="250.0" prefWidth="118.0" resizable="false"
					text="Admissao" />
				<TableColumn id="nascColuna" fx:id="nascColuna"
					editable="false" maxWidth="264.0" prefWidth="130.0"
					sortable="false" text="Nascimento" />
			</columns>
			<columnResizePolicy>
				<!-- <TableView fx:constant="DEFAULT_MOUSE_TRANSPARENT" /> -->
			</columnResizePolicy>
			<contextMenu>
				<ContextMenu>
					<items>
						<MenuItem fx:id="miNovoUsuario" onAction="#novoServidor"
							text="novo servidor" /> <!--implementado -->
						<SeparatorMenuItem />
						<MenuItem fx:id="miExibirServidor"
							onAction="#exibirServidor" text="visualizar servidor" /> <!--implementado -->
						<MenuItem fx:id="miExibirServConv"
							onAction="#exibirServidorConvenios" text="convenios do servidor" /> <!--implementado -->
						<MenuItem fx:id="miRemoverServ"
							onAction="#removerServidor" text="remover servidor" /> <!--implementar -->
						<MenuItem fx:id="miGerarFicha"
							onAction="#gerarFichaServidor" text="gerar ficha" /> <!--implementar -->
						<SeparatorMenuItem />
						<MenuItem fx:id="miExibirConv"
							onAction="#exibirConvenios" text="convênios" /> <!--implementar -->
						<MenuItem fx:id="miNovoConvenio"
							onAction="#adicionarConvenio" text="novo convênio" /><!--implementado -->
						<SeparatorMenuItem />
						<MenuItem fx:id="miUpdateTable"
							onAction="#atualizarTabela" text="Atualizar tabela" />
						<MenuItem fx:id="miImprimirRelacao"
							onAction="#imprimirRelacao" text="imprimir relação" />
					</items>
				</ContextMenu>
			</contextMenu>


		</TableView>
		<MenuBar prefHeight="29.0" prefWidth="1300.0">
			<menus>
				<Menu mnemonicParsing="false" text="Arquivos">
					<items>
						<MenuItem text="exportar servidores para csv"
							onAction="#exportarServidoresCSV" />
						<MenuItem text="exportar convenios para csv"
							onAction="#exportarConveniosCSV" />
						<MenuItem text="importar convenios de csv" />
						<MenuItem text="importar servidores de csv" />
						<MenuItem text="fechar aplicacao" />
					</items>
				</Menu>
				<Menu mnemonicParsing="false" text="Ajuda">
					<items>
						<MenuItem mnemonicParsing="false" text="Sobre" />
					</items>
				</Menu>
			</menus>
		</MenuBar>
		<ImageView fitHeight="149.0" fitWidth="629.0"
			layoutX="336.0" layoutY="49.0" pickOnBounds="true"
			preserveRatio="true">
			<image>
				<Image url="@../assets/img/logox3.png" />
			</image>
		</ImageView>
	</children>
</AnchorPane>
