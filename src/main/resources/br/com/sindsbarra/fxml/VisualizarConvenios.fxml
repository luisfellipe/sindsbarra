<AnchorPane prefHeight="522.0" prefWidth="744.0" stylesheets="@../assets/css/application.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.com.sindsbarra.controller.ConvenioController">
   <children>
      <TableView id="tabela" fx:id="tabela" layoutX="10.0" layoutY="78.0" prefHeight="433.0" prefWidth="721.0" stylesheets="@../assets/css/application.css">
