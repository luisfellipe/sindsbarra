                <MenuItem fx:id="miRemoverConvenio" mnemonicParsing="false" text="remover" onAction="#removerConvenio"/>
                <MenuItem fx:id="miUpdateTabela" mnemonicParsing="false" text="atualizar tabela" onAction="#update"/>
